<h1>Show one specific article</h1>

<table>
  <tr>
    <td><%= @article.title %></td>
    <td><%= @article.text %></td>
  </tr>
</table>

<h2>Add a comment</h2 %>
<%= form_for([@article, @article.comments.build]) do |f| %>
<p>
  <%= f.label :commenter %><br>
  <%= f.text_field :commenter %>
</p>
<p>
  <%= f.label :body %><br>
  <%= f.text_area :body %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>


<%= link_to 'Back', articles_path %>